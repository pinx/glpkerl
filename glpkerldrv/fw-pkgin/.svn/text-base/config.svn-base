FW_PACKAGE_NAME="glpkerldrv"
FW_PACKAGE_VERSION="4.38.0"
FW_PACKAGE_MAINTAINER="Paul Mineiro <paul-fw@mineiro.com>"
FW_PACKAGE_SHORT_DESCRIPTION="Erlang driver for glpk."
